{
  "$schema": "https://tauri.app/schemas/tauri.schema.json",
  "productName": "Clawku Client",
  "identifier": "com.clawku.client",
  "version": "0.1.4",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://api.b.clawku.id/client/updates/latest.json",
        "https://github.com/clawku/platform-client/releases/latest/download/latest.json"
      ],
      "pubkey": "MCowBQYDK2VwAyEAIqhJcy9I9FNAKt4IkAsEQrsoazixnBHkzWtIROj8nWA="
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Clawku Client",
        "width": 900,
        "height": 600,
        "visible": true,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "msi", "nsis"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png",
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {}
  }
}
